{
  "name": "custom-forum",
  "version": "1.0.0",
  "description": "Custom forum just like reddit, allow user to post topic and comment on them!",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ericz99/custom-forum.git"
  },
  "author": "Eric Zhang",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ericz99/custom-forum/issues"
  },
  "homepage": "https://github.com/ericz99/custom-forum#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "concurrently": "^4.1.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.4.0",
    "mongoose": "^5.4.11",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "underscore": "^1.9.1"
  },
  "devDependencies": {
    "nodemon": "^1.18.10"
  }
}
